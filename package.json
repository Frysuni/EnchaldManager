{
  "name": "echnald-manager",
  "author": "Frys",
  "private": true,
  "license": "LICENSE.TXT",
  "engines": {
    "node": ">=16.0.0 <19.0.0"
  },
  "bin": "./dist/main.js",
  "scripts": {
    "boot": "npm i -g yarn@latest && yarn install --check-files --prod && npm run build && npm run typeorm schema:sync && npm run pm2",
    "pm2": "npm install -g pm2@latest && pm2 update && pm2 start ecosystem.config.js -i 4 && pm2 startup && pm2 save",
    "build": "nest build -p tsconfig.build.json",
    "dev": "(SET NODE_ENV=dev||export NODE_ENV=dev) && (SET NODE_OPTIONS=--trace-warnings||export NODE_OPTIONS=--trace-warnings) && nest start --watch --debug 9229 --preserveWatchOutput",
    "start": "(SET NODE_ENV=production||export NODE_ENV=production) && node .",
    "lint": "eslint \"./src/**/*.ts\" --fix",
    "typeorm": "ts-node -r ./node_modules/tsconfig-paths/register ./node_modules/typeorm/cli -d ./dist/ormconfig.js"
  },
  "dependencies": {
    "@discord-nestjs/common": "^5.2.4",
    "@discord-nestjs/core": "^5.3.6",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "cron": "^2.3.0",
    "discord.js": "^14.11.0",
    "dotenv": "^16.0.3",
    "env-var": "^7.3.1",
    "minecraft-server-util": "^5.4.2",
    "mysql2": "^3.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typeorm": "^0.3.15"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.0",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.3",
    "typescript": "^4.9.5",
    "webpack": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
